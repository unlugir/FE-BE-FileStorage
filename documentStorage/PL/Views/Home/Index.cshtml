@{
    ViewBag.Title = "Upload";
}
@using (Html.BeginForm("PostUpload", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <form>
        <div class="form-group">
            <div class="col-md-10">
                <p>Upload one or more files using this form:</p>
                <input asp-for="file" name="file" id="file" type="file" class="form-control" />
                <input asp-for="Input.AnotherInput" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Upload" />
            </div>
        </div>
    </form>
}